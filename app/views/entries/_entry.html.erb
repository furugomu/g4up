<article>
 <% if entry.photo.present? %>
 <p class="thumb">
  <%= link_to(
        image_tag(entry.photo.url(:thumb), alt: entry.id, rel: 'photo'),
        entry.photo.url) %>
 </p>
 <% end %>
 <p class="body"><%= entry.body %></p>
 <footer>
  <% if entry.root? %>
   <span class="tags">
    <% if entry.tags.present? %>&hearts;<% end %>
    <% entry.tags.each do |tag| %>
     <%= link_to(tag.name, tag) %>
    <% end %>
   </span>
   <span>
    &spades;<%= entry.replies_count %>
   </span>
  <% end %>
  <%= link_to(entry_time(entry), entry) %>
 </footer>
</article>
